@model BookModel
@{
    ViewData["Title"] = "Kitap Detayları";
}


<div class="row">
    <div class="col-14">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container px-4 text-center">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3">
                <p>Kitabın Adı:</p>
                <h3>@Model.BookName</h3>

                <p>Yazar: </p>
                <h3>@Model.Author</h3>

                <p>Kitabın Türü:</p>
                <p>@Model.BookType</p>

                <p>Yayım Tarihi:</p>
                <p>@Model.PublishingDate</p>

                @if (Model.Stock > 1)
                {
                    <p>Kitap Mevcuttur.</p>
                }
                else
                {
                    <p>Kitap Yoktur.</p>
                }
            </div>
        </div>
        <div class="col">
            <div class="p-3"><img src="~/uploads/@Model.BookImageFileName" width="256px" height="400px" class="img-thumbnail" /></div>
        </div>
    </div>
</div>
<div class="text-center">
    <a class="btn btn-secondary" asp-action="DetailsList"><i class="fa-solid fa-rotate-left me-2 fa-2m"></i>Geri Dön</a>
    <a asp-action="BorrowBook" asp-route-id="@Model.BookId" class="btn btn-success btn-sm text-white"><i class="fa-solid fa-book me-2 fa-2x"></i>Ödünç Al</a>
</div>
<hr />
<div>
    <p>Kitap Hakkında:</p>
    <p>@Model.BookSubject</p>
</div>